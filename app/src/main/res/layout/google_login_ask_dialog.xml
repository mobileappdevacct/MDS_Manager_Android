<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/dim_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginRight="@dimen/dim_10"
            android:background="@drawable/google_dialog_bg"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dim_20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_5"
                android:layout_marginRight="@dimen/dim_5"
                android:gravity="center"
                android:text="Use your Google account to keep your data safe. This will allow you to access your information on more than one device and/or change to a new device in the future. Click here if you need instructions on how to create a free Google account."
                android:textColor="#000000"
                android:textSize="@dimen/dim_15"
                android:layout_marginTop="@dimen/dim_15"/>

            <Button
                android:id="@+id/yesBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_40"
                android:layout_marginLeft="@dimen/dim_5"
                android:layout_marginRight="@dimen/dim_5"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/remine_later_btn"
                android:text="Sign In Or Sign Up"
                android:textColor="#ffffff"
                android:textSize="@dimen/dim_15" />

            <Button
                android:id="@+id/remindmelaterBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_40"
                android:layout_marginLeft="@dimen/dim_5"
                android:layout_marginRight="@dimen/dim_5"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/remine_later_btn"
                android:text="Remind Me Later"
                android:textColor="#ffffff"
                android:textSize="@dimen/dim_15" />

            <Button
                android:id="@+id/nevershowthisBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_40"
                android:layout_marginLeft="@dimen/dim_5"
                android:layout_marginRight="@dimen/dim_5"
                android:layout_marginTop="@dimen/dim_10"
                android:layout_marginBottom="@dimen/dim_10"
                android:background="@drawable/remine_later_btn"
                android:text="Never Show This Again"
                android:textColor="#ffffff"
                android:textSize="@dimen/dim_15" />
        </LinearLayout>
        <ImageView
            android:id="@+id/closeImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:src="@mipmap/popup_close"/>
    </RelativeLayout>
</RelativeLayout>