<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"></include>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dim_10"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="IPSS-R Score *"
            android:textColor="@color/green"
            android:textSize="@dimen/dim_16" />

        <EditText
            android:id="@+id/scoreEdit"
            android:layout_width="0dp"
            android:layout_height="@dimen/dim_35"
            android:layout_weight=".5"
            android:background="@drawable/rounded_bg_symtoms"
            android:padding="@dimen/dim_5"
            android:singleLine="true"
            android:textColor="#000000" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@mipmap/img_seperater" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dim_10"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="Date *"
            android:textColor="@color/green"
            android:textSize="@dimen/dim_16" />

        <Button
            android:id="@+id/dateBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dim_35"
            android:layout_weight=".5"
            android:background="@drawable/rounded_bg_symtoms"
            android:padding="@dimen/dim_5"
            android:textColor="@color/gray_text" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@mipmap/img_seperater" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dim_10"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="Notes"
            android:textColor="@color/green"
            android:textSize="@dimen/dim_16" />

        <EditText
            android:id="@+id/notesEdt"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim_80"
            android:layout_weight=".5"
            android:background="@drawable/rounded_bg_symtoms"
            android:gravity="start"
            android:inputType="textMultiLine|textCapSentences"
            android:imeOptions="actionDone"
            android:padding="@dimen/dim_5"
            android:textColor="@color/gray_text" />
    </LinearLayout>

    <Button
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_100"
        android:layout_marginRight="@dimen/dim_100"
        android:layout_marginTop="@dimen/dim_15"
        android:background="@mipmap/btn_add_diagnosis"
        android:padding="@dimen/dim_5"

        android:text="ADD"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</LinearLayout>