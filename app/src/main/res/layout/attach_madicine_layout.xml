<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:padding="@dimen/dim_10"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Medicine"
                android:textColor="@color/green"
                android:textSize="@dimen/dim_16" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/medicineEdt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_35"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_bg_symtoms"
                    android:padding="@dimen/dim_5"
                    android:textColor="@color/gray_text" />

                <Button
                    android:id="@+id/addmedicineBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/dim_15"
                    android:background="@mipmap/btn_add_diagnosis"
                    android:gravity="center"
                    android:padding="@dimen/dim_5"

                    android:text="Add Medicine"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@mipmap/img_seperater" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dim_10"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Dosage"
                android:textColor="@color/green"
                android:textSize="@dimen/dim_16" />

            <EditText
                android:id="@+id/dosageEdt"
                android:layout_width="0dp"
                android:layout_height="@dimen/dim_35"
                android:layout_weight=".5"
                android:background="@drawable/rounded_bg_symtoms"
                android:padding="@dimen/dim_5"
                android:textColor="@color/gray_text" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@mipmap/img_seperater" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dim_10"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Days"
                android:textColor="@color/green"
                android:textSize="@dimen/dim_16" />

            <EditText
                android:id="@+id/daysEdt"
                android:layout_width="0dp"
                android:layout_height="@dimen/dim_35"
                android:layout_weight=".5"
                android:background="@drawable/rounded_bg_symtoms"
                android:padding="@dimen/dim_5"
                android:textColor="@color/gray_text" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@mipmap/img_seperater" />

        <Button
            android:id="@+id/mainaddmedicineBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_50"
            android:layout_marginRight="@dimen/dim_50"
            android:layout_marginTop="@dimen/dim_15"
            android:gravity="center"
            android:background="@mipmap/btn_add_diagnosis"
            android:padding="@dimen/dim_5"

            android:text="Add Medicine"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>