<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:padding="@dimen/dim_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dim_10"
                android:text="Blood Counts &amp; Diagnostic Tests"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_16" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dim_10"
                android:orientation="horizontal">


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="@dimen/dim_5"
                    android:src="@mipmap/icn_arrow_down_aboutlabel" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_light"
            android:padding="@dimen/dim_5"
            android:weightSum="10">

            <TextView
                android:id="@+id/diagnosisTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="4"
                android:gravity="center"

                android:text="Diagnostic Test"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_10" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Normal Result"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_10" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dim_10"
                android:layout_weight="3"
                android:gravity="center"
                android:text="My Result"

                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_10" />


        </LinearLayout>


        <ListView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim_160" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dim_16"
            android:background="@mipmap/btn_add_diagnosis"
            android:text="Add Results"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dim_16" />


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:padding="@dimen/dim_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dim_10"
                android:text="Diagnostic Test"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_16" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dim_10"
                android:orientation="horizontal">


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="@dimen/dim_5"
                    android:src="@mipmap/icn_arrow_down_aboutlabel" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_light"
            android:padding="@dimen/dim_5"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="4"
                android:gravity="center"

                android:text="Diagnostic Test"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_10" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Normal Result"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_10" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dim_10"
                android:layout_weight="3"
                android:gravity="center"
                android:text="My Result"

                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_10" />


        </LinearLayout>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim_160"

            />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dim_16"
            android:background="@mipmap/btn_add_diagnosis"
            android:text="Add Results"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dim_16" />


    </LinearLayout>
</ScrollView>