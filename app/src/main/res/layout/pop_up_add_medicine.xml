<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"

    android:padding="@dimen/dim_20">
   <RelativeLayout
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:background="@drawable/rounded_bg_symtoms">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:paddingBottom="@dimen/dim_5"
        android:layout_above="@+id/saveLinearLayout">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dim_10">


            <LinearLayout
                android:id="@+id/takePhoto_ll"
                android:layout_width="@dimen/dim_130"
                android:layout_height="@dimen/dim_90"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/bg_box_take_photo"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icn_camera_take_photo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_5"
                    android:text="Take Photo"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/dim_15" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Type *"
                    android:textColor="@color/green"
                    android:textSize="@dimen/dim_16" />

                <Spinner
                    android:id="@+id/typeSpinner"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dim_35"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_bg_symtoms"
                    android:padding="@dimen/dim_5"
                    android:spinnerMode="dropdown"/>
                <TextView
                    android:id="@+id/type_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dim_35"
                    android:layout_weight=".5"
                    android:visibility="gone"
                    android:padding="@dimen/dim_5"
                    android:background="@drawable/rounded_bg_symtoms"
                    android:textColor="@color/green"
                    android:textSize="@dimen/dim_16" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Drug Name *"
                    android:textColor="@color/green"
                    android:textSize="@dimen/dim_16" />

                <EditText
                    android:id="@+id/drugNameEdt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_bg_symtoms"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:padding="@dimen/dim_5"
                    android:singleLine="true"
                    android:textColor="@color/gray_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Generic Name"
                    android:textColor="@color/green"
                    android:textSize="@dimen/dim_16" />

                <EditText
                    android:id="@+id/genericEdt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_bg_symtoms"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:padding="@dimen/dim_5"
                    android:singleLine="true"
                    android:textColor="@color/gray_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Dosage"
                    android:textColor="@color/green"
                    android:textSize="@dimen/dim_16" />

                <EditText
                    android:id="@+id/dosageEdt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_bg_symtoms"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/dim_5"
                    android:singleLine="true"
                    android:inputType="textCapSentences"
                    android:textColor="@color/gray_text" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Frequency"
                    android:textColor="@color/green"
                    android:textSize="@dimen/dim_16" />

                <Spinner
                    android:id="@+id/frequencySpinner"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dim_35"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_bg_symtoms"
                    android:padding="@dimen/dim_5" />
                <TextView
                    android:id="@+id/frequencyTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:padding="@dimen/dim_5"
                    android:visibility="gone"
                    android:background="@drawable/rounded_bg_symtoms"
                    android:textColor="@color/green"
                    android:textSize="@dimen/dim_16" />
                <!--<EditText-->
                <!--android:id="@+id/frequencyEdt"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight=".5"-->
                <!--android:background="@drawable/rounded_bg_symtoms"-->
                <!--android:imeOptions="actionNext"-->
                <!--android:inputType="phone"-->
                <!--android:padding="@dimen/dim_5"-->
                <!--android:singleLine="true"-->
                <!--android:textColor="@color/gray_text" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Start Date"
                    android:textColor="@color/green"
                    android:textSize="@dimen/dim_16" />

                <Button
                    android:id="@+id/startDateBtn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dim_35"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_bg_symtoms"
                    android:padding="@dimen/dim_5"
                    android:textColor="@color/gray_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="End Date"
                    android:textColor="@color/green"
                    android:textSize="@dimen/dim_16" />

                <Button
                    android:id="@+id/endDateBtn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dim_35"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_bg_symtoms"
                    android:padding="@dimen/dim_5"
                    android:textColor="@color/gray_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Drug Name"
                    android:textColor="@color/green"
                    android:textSize="@dimen/dim_16"
                    android:visibility="invisible" />

                <CheckBox
                    android:id="@+id/progressCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:padding="@dimen/dim_5"
                    android:text="In Progress"
                    android:textColor="@color/gray_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Reminder"
                    android:textColor="@color/green"
                    android:textSize="@dimen/dim_16" />

                <TextView
                    android:id="@+id/addReminderTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_bg_symtoms"
                    android:padding="@dimen/dim_5"
                    android:text="Add Reminder"
                    android:textColor="@color/gray_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Refill Date"
                    android:textColor="@color/green"
                    android:textSize="@dimen/dim_16" />

                <Button
                    android:id="@+id/refillDateBtn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dim_35"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_bg_symtoms"
                    android:padding="@dimen/dim_5"
                    android:textColor="@color/gray_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Refill Frequency"
                    android:textColor="@color/green"
                    android:textSize="@dimen/dim_16" />


                <Spinner
                    android:id="@+id/refillfrequencySpinner"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dim_35"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_bg_symtoms"
                    android:padding="@dimen/dim_5" />
                <TextView
                    android:id="@+id/refillfrequencytxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_bg_symtoms"
                    android:padding="@dimen/dim_5"
                    android:textColor="@color/green"
                    android:visibility="gone"
                    android:textSize="@dimen/dim_16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addProviderLl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_10"
                    android:gravity="center"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="Prescribed By"
                        android:textColor="@color/green"
                        android:textSize="@dimen/dim_16" />

                    <Button
                        android:id="@+id/prescribedBtn"
                        android:layout_width="0dp"

                        android:layout_height="@dimen/dim_35"
                        android:layout_weight=".5"
                        android:background="@drawable/rounded_bg_symtoms"
                        android:padding="@dimen/dim_5"
                        android:textColor="@color/gray_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_10"
                    android:gravity="center"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="Drug Name"
                        android:textColor="@color/green"
                        android:textSize="@dimen/dim_16"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/addProviderBtn"
                        android:layout_width="0dp"

                        android:layout_height="@dimen/dim_35"
                        android:layout_weight=".5"
                        android:background="@color/brown_theme"
                        android:padding="@dimen/dim_5"
                        android:text="Add Provider"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/dim_12" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_5"
                android:layout_weight=".5"
                android:gravity="left"
                android:text="Note"
                android:textColor="@color/green"
                android:textSize="@dimen/dim_16" />

            <EditText
                android:id="@+id/notesEdt"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim_80"
                android:layout_marginTop="@dimen/dim_5"
                android:background="@drawable/rounded_bg_symtoms"
                android:imeOptions="actionDone"
                android:padding="@dimen/dim_5"
                android:gravity="start"
                android:inputType="textMultiLine|textCapSentences"
                />


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/saveLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_10"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:weightSum="1">

        <TextView
            android:id="@+id/closeTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center"
            android:padding="@dimen/dim_10"

            android:text="Close"

            android:textColor="@color/green"
            android:textSize="@dimen/dim_16" />

        <TextView
            android:id="@+id/saveTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center"
            android:padding="@dimen/dim_10"
            android:text="Save"
            android:textColor="@color/green"
            android:textSize="@dimen/dim_16" />

    </LinearLayout>
   </RelativeLayout>
</RelativeLayout>
