<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"></include>
    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_above="@+id/addSymptomBtn"
        android:visibility="gone">

    <LinearLayout
        android:id="@+id/listcartLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dim_10">

        <ImageButton
            android:id="@+id/listImgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@mipmap/btn_list_touch" />

        <ImageButton
            android:id="@+id/chartImgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@mipmap/btn_chart_normal"

            />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/topContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabLayout"
        android:layout_above="@+id/addResultsBtn"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bct_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_light"
            android:padding="@dimen/dim_5"
            android:weightSum="12">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Date"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_13" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="2"
                android:gravity="center"
                android:text="HGB"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_13" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="2"
                android:gravity="center"
                android:text="WBC"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_13" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="2"
                android:gravity="center"
                android:text="ANC"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_13" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="3"
                android:gravity="center"
                android:text="PLATELETES"

                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_13" />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dim_10"
                android:paddingRight="@dimen/dim_10"
                android:src="@mipmap/btn_delete"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/treatment_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_light"
            android:padding="@dimen/dim_5"
            >




            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:autoLink="all"
                android:gravity="center"
                android:text="Treatment Type"
                android:visibility="gone"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_13" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:gravity="center"

                android:text="Date"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_13" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:gravity="center"

                android:text="Notes"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_13" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_arrow_medicalhistory"
                android:visibility="invisible"/>
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dim_10"
                android:paddingRight="@dimen/dim_10"
                android:src="@mipmap/btn_delete"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boneMarrow_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_light"
            android:padding="@dimen/dim_5"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="3.2"
                android:gravity="center"

                android:text="Date"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_13" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="3.2"
                android:gravity="center"

                android:text="Description"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_13" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="3.2"
                android:gravity="center"

                android:text="Bone Blast"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_13" />

            <ImageView
                android:id="@+id/delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dim_10"
                android:paddingRight="@dimen/dim_10"
                android:src="@mipmap/btn_delete"
                android:visibility="invisible" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/transfusion_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_light"
            android:padding="@dimen/dim_5"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="3.2"
                android:gravity="center"

                android:text="Date"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_13" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="3.2"
                android:gravity="center"

                android:text="Type"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_13" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="3.2"
                android:gravity="center"

                android:text="Unit"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_13" />

            <ImageView
                android:id="@+id/transfusiondelete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dim_10"
                android:paddingRight="@dimen/dim_10"
                android:src="@mipmap/btn_delete"
                android:visibility="invisible" />
        </LinearLayout>
        <Spinner
            android:id="@+id/typetransfusionSpinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_30"
            android:background="@mipmap/btn_add_diagnosis"
            android:layout_marginTop="@dimen/dim_5"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginRight="@dimen/dim_10"
            android:visibility="gone"></Spinner>
        <ListView
            android:id="@+id/listView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/addResultsBtn"
            android:layout_below="@+id/topContainer" />
        <LinearLayout
            android:id="@+id/graph"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"

            android:layout_below="@+id/tabLayout"
            android:layout_marginLeft="@dimen/dim_10"

            ></LinearLayout>
    </LinearLayout>


 <!--   <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_above="@+id/addResultsBtn"
        android:layout_below="@+id/topContainer"/>-->

    <com.jjoe64.graphview.GraphView
        android:id="@+id/trnsplategraph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_above="@+id/addResultsBtn"
        android:layout_below="@+id/topContainer"/>
    <com.jjoe64.graphview.GraphView
        android:id="@+id/transpbrsgraph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_above="@+id/addResultsBtn"
        android:layout_below="@+id/topContainer"/>

    <Button
        android:id="@+id/addResultsBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dim_15"
        android:background="@mipmap/btn_add_diagnosis"
        android:padding="@dimen/dim_5"
        android:text="Add Results"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</RelativeLayout>
