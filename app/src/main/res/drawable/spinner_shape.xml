<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android">

                    <solid android:color="@color/spinner_text_color" />

                    <stroke android:width="1dip" android:color="@color/gray_text" />

                    <corners android:radius="3dip" />

                    <padding android:bottom="@dimen/dim_5" android:left="@dimen/dim_5" android:right="@dimen/dim_10" android:top="@dimen/dim_5" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center_vertical|right" android:src="@mipmap/icn_dropdown" />
                // you can use any other image here, instead of default_holo_dark_am
            </item>
        </layer-list>
    </item>

</selector>